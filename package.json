{
  "name": "hostconfig",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "src/app",
    "src/http",
    "src/https",
    "src/public",
    "src/static"
  ],
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "build": "tsc -p ./tsconfig.json && tsc-alias && ts-add-js-extension --dir=dist",

    "rebuild": "yarn clean && yarn build",
    "dbg": "DEBUG=http:* yarn dev",
    "start": "yarn prod",
    "restart": "yarn rebuild && yarn prod",
    "dev": "NODE_ENV=development yarn serve:http",
    "prod": "NODE_ENV=production yarn serve:http",
    "serve": "node ./dist/index.js",
    "clean": "rm -rvf ./dist",
    "wipe": "yarn clean && rm -rvf ./node_modules",
    "gen:ssl": "./generate.sh",
    "serve:http": "node ./dist/http/index.js",
    "serve:https": "sudo node ./dist/https/index.js"
  }
}
