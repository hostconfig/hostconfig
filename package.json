{
  "name": "hostconfig",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "start": "yarn prod",
    "build": "yarn clean && tsc && tsc-alias && ts-add-js-extension --dir=dist",
    "dev": "NODE_ENV=development yarn build && yarn serve:http",
    "prod": "NODE_ENV=production yarn build && yarn serve:http",
    "clean": "rimraf dist",
    "wipe": "yarn clean && rimraf node_modules",
    "gen:ssl": "./generate.sh",
    "serve:http": "node ./dist/http/index.js",
    "serve:https": "sudo node ./dist/https/index.js"
  }
}
